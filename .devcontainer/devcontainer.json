{
  "name": "Flowi React/Vite",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Puertos que se abrirán automáticamente (para el comando "npm run dev")
  "forwardPorts": [5000],
  
  "postCreateCommand": "npm install",
  // O si usas PNPM: "postCreateCommand": "pnpm install",
  
  // Configuraciones específicas de VS Code para el Codespace
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  
  // Extensiones recomendadas para React y Tailwind
  "customizations": {
    "vscode": {
      "extensions": [
        "dsznajder.es7reactjssnippets",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "GitHub.copilot" // Si tienes suscripción a Copilot
      ]
    }
  }
}
